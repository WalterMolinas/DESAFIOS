#include <stdio.h>
//Solicita la edad de una persona y clasifica en:
//Menor de edad (<18 a침os)
//Adulto (18-64 a침os)
//Adulto mayor (=65 a침os)
int main() {
	int edad;
	printf("Ingrese una edad y el algoritmo la clasificar치\n");
	scanf("%d", &edad);
	if (edad<0){
		printf("ERROR la edad no puede ser negativa");
	}
	if (edad>=120){
		printf("ERROR, no hay registro de personas que hayan vivido tal edad");
	}
	if (edad>=0 && edad<18){
		printf("Usted es Menor de edad");
	}
	if (edad>18 && edad<65){
		printf("Usted es un Adulto");
	}
	if (edad>=65){
		printf("Usted es un Adulto Mayor");
	}
	return 0;
}
